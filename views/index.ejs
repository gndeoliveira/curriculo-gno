<!DOCTYPE html>
<html>
<title>Gabriel Nascimento de Oliveira</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="../css/styles.css">
<link rel="stylesheet" href="../css/w3.css">
<link rel="stylesheet" href="../css/materialdesignicons.css">
<link rel="stylesheet" href="../css/materialdesignicons.css.map">

<link rel="manifest" href="../../manifest.json">
<link rel="shortcut icon" href="../assets/img/favicon.ico" type="image/x-icon">

<script>
    if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('../../sw.js')
            .then(function () {
                console.log('Service registrado')
            })
            .catch(function () {
                console.log('Service falhou')
            })
    }
</script>

<body class="w3-light-grey">

    <!-- Page Container -->
    <div class="w3-content w3-margin-top" style="max-width:1400px;">

        <!-- The Grid -->
        <div class="w3-row-padding">

            <!-- Left Column -->
            <div class="w3-third">

                <div class="w3-white w3-text-grey w3-card-4">
                    <div class="w3-display-container">
                        <img src="../assets/img/gabrielfoto.png" style="width:100%" alt="Avatar">
                        <div class="w3-display-bottomleft w3-container w3-text-black">
                            <!-- Nome -->
                            <h2>
                                <%=data.name%>
                            </h2>
                        </div>
                    </div>
                    <div class="w3-container">
                        <!-- ProfissÃ£o -->
                        <p><i class="mdi mdi-briefcase w3-margin-right w3-large w3-text-teal"></i>
                            <%=data.job%>
                        </p>
                        <!-- Cidade -->
                        <p><i class="mdi mdi-home  w3-margin-right w3-large w3-text-teal"></i>
                            <%=data.city%>
                        </p>
                        <!-- E-mail-->
                        <p><i class="mdi mdi-email  w3-margin-right w3-large w3-text-teal"></i>
                            <%=data.email%>
                        </p>
                        <!-- Telefone -->
                        <p><i class="mdi mdi-phone  w3-margin-right w3-large w3-text-teal"></i>
                            <%=data.cel%>
                        </p>
                        <hr>

                        <p class="w3-large"><b><i class="mdi mdi-asterisk  w3-margin-right w3-text-teal"></i>Skills</b>
                        </p>
                        <!-- EJS para Skills -->
                        <% for (skill of skills) { %>
                            <p> <i class="mdi <%=skill.logo%>">
                                    <%=skill.nome%>
                                </i>
                            </p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal"
                                    style="width:<%=skill.range%>">
                                    <%=skill.range%>
                                </div>
                            </div>
                            <% } %>
                                <br>

                                <!-- EJS para Idiomas -->
                                <p class="w3-large w3-text-theme"><b><i
                                            class="mdi mdi-translate  w3-margin-right w3-text-teal"></i>Idiomas</b></p>
                                <% for (idioma of idiomas) { %>
                                    <p>
                                        <%=idioma.language%>
                                    </p>
                                    <div class="w3-light-grey w3-round-xlarge">
                                        <div class="w3-round-xlarge w3-teal w3-center"
                                            style="height:24px;width:<%=idioma.level%>">
                                            <%=idioma.level%>
                                        </div>
                                    </div>
                                    <% } %>

                                        <br>
                    </div>
                </div><br>

                <!-- End Left Column -->
            </div>

            <!-- Right Column -->
            <div class="w3-twothird">

                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <h2 class="w3-text-grey w3-padding-16"><i
                            class="mdi mdi-briefcase  w3-margin-right w3-xxlarge w3-text-teal"></i>Work Experience
                    </h2>
                    <% for (exp of experiences) { %>
                        <div class="w3-container">
                            <h5 class="w3-opacity"><b>
                                    <%=exp.job%>
                                </b></h5>
                            <h6 class="w3-text-teal"><i class="mdi mdi-calendar w3-margin-right"></i>
                                <%=exp.timespan%>
                            </h6>
                            <p>
                                <%=exp.description%>
                            </p>
                            <hr>
                        </div>
                        <% } %>
                </div>

                <div class="w3-container w3-card w3-white">
                    <h2 class="w3-text-grey w3-padding-16"><i
                            class="mdi mdi-school  w3-margin-right w3-xxlarge w3-text-teal"></i>Education</h2>
                    <% for (edu of education) { %>
                        <div class="w3-container">
                            <h5 class="w3-opacity"><b>
                                    <%=edu.school%>
                                </b></h5>
                            <h6 class="w3-text-teal"><i class="mdi mdi-calendar w3-margin-right"></i>
                                <%=edu.timespan%>
                            </h6>
                            <p>
                                <%=edu.grau%>
                            </p>
                            <hr>
                        </div>
                        <% } %>
                </div>

                <!-- End Right Column -->
            </div>

            <!-- End Grid -->
        </div>

        <!-- End Page Container -->
    </div>

    <footer class="w3-container w3-teal w3-center w3-margin-top">
        <p>Find me on social media.</p>
        <i class="mdi mdi-facebook w3-hover-opacity"></i>
        <i class="mdi mdi-instagram w3-hover-opacity"></i>
        <i class="mdi mdi-snapchat w3-hover-opacity"></i>
        <i class="mdi mdi-pinterest w3-hover-opacity"></i>
        <i class="mdi mdi-twitter w3-hover-opacity"></i>
        <i class="mdi mdi-linkedin w3-hover-opacity"></i>
        <p>Powered by <a href="https://www.w3schools.com/w3css/default.asp" target="_blank">w3.css</a></p>
    </footer>

</body>

</html>